
body {
  font-size:14px;
  color:#666;
}

footer {
  text-align: center;
  height: 60px;
  background-color: #343D46;
  color: #FFF;
}

footer .small {
  font-size: 12px;
  line-height: 16px;
  margin-top: 25px;
}

footer .small a:hover{
  color: white;
}

.navbar-default{
  background: #343D46;
  z-index:1;
}

.navbar-default .navbar-brand {
  height:50px;
  display:flex;
  align-items:center;
  color: #C3D4E7;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-brand .logo{
  height:32px;
  margin-right:5px;
}

.navbar-default .github img{
  height: 16px;
  margin-top: -4px;
}

.navbar-default .navbar-nav>li>a{
  color: white;
  text-shadow: rgba(255, 255, 255, 0.2) 0 1px 0;
  text-transform: uppercase;
}

.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus {
  color: white;
  background-color: #4D555C;
}

.navbar-default .navbar-nav>li>a:focus, .navbar-default .navbar-nav>li>a:hover {
  background-color: #EEE;
}

.dropdown-submenu {
    position: relative;
}

.dropdown-submenu>.dropdown-menu {
    top: 0;
    left: 100%;
    margin-top: -6px;
    margin-left: -1px;
    -webkit-border-radius: 0 6px 6px 6px;
    -moz-border-radius: 0 6px 6px;
    border-radius: 0 6px 6px 6px;
}

.dropdown-submenu:hover>.dropdown-menu {
    display: block;
}

.dropdown-submenu>a:after {
    display: block;
    content: " ";
    float: right;
    width: 0;
    height: 0;
    border-color: transparent;
    border-style: solid;
    border-width: 5px 0 5px 5px;
    border-left-color: #ccc;
    margin-top: 5px;
    margin-right: -10px;
}

.dropdown-submenu:hover>a:after {
    border-left-color: #fff;
}

.dropdown-submenu.pull-left {
    float: none;
}

.dropdown-submenu.pull-left>.dropdown-menu {
    left: -100%;
    margin-left: 10px;
    -webkit-border-radius: 6px 0 6px 6px;
    -moz-border-radius: 6px 0 6px 6px;
    border-radius: 6px 0 6px 6px;
}

.container-site{
  padding-top: 70px;
}

.section-index .project{
  text-align:center;
}

.section-index .project .features{
  margin-top: 40px;
}

.btn-default,.btn-default:focus{
  color: #C3D4E7;
  background-color: #4D555C;
  border: 1px solid #2e3135;
  background: linear-gradient(#4D555C,#1c1e21);
  border-radius: 2px;
  transition: all 0.4s ease-in;
  outline: 0;
}

.btn-default:hover {
  color: white;
}

.btn-warning,.btn-warning:focus{
  outline: 0;
}

section {
  width: 100%;
    padding: 30px 30px 10px 30px;
    margin: 20px 0;
    position: relative;
    background: #fbfbfb;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    -ms-border-radius: 2px;
    -o-border-radius: 2px;
    border-radius: 2px;
    border: 1px solid #cbcbcb;
    -webkit-box-shadow: 0px 1px 2px rgba(0,0,0,0.09), inset 0px 0px 2px 2px rgba(255,255,255,0.5), inset 0 0 5px 5px rgba(255,255,255,0.4);
    -moz-box-shadow: 0px 1px 2px rgba(0,0,0,0.09),inset 0px 0px 2px 2px rgba(255,255,255,0.5),inset 0 0 5px 5px rgba(255,255,255,0.4);
    box-shadow: 0px 1px 2px rgba(0,0,0,0.09), inset 0px 0px 2px 2px rgba(255,255,255,0.5), inset 0 0 5px 5px rgba(255,255,255,0.4);
}

.sidebar{
  margin: 20px 0;
}

.article-list .media{
  border-bottom: 1px solid #f0f0f0;
  padding:10px 0;
}

.article-list .media-object{
  width:125px;
  height:100px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
}

.category-sidebar {
  width: 280px;
  position: fixed;
  left: 0;
  top: 50px;
  bottom: 0;
  z-index: 0;
  border-right: 1px solid #EFEFEF;
  background: #FAFBFF;
  overflow-y: auto;
  transition: left .4s ease-in;
}

.category-sidebar .title{
  height:30px;
  text-align:center;
}

.doc-container .article-doc{
  margin-left: 280px;
  transition: margin-left .4s ease-in;
}

.doc-container.sidebar-collapse .category-sidebar{
  left: -280px;
}

.doc-container.sidebar-collapse .article-doc{
  margin-left: 0;
}

.category-sidebar-toggle {
  float: left;
  height: 50px;
  padding: 15px 15px;
  font-size: 18px;
  line-height: 20px;
  color: white;
  opacity: 0.7;
}

.category-sidebar-toggle:hover,.category-sidebar-toggle:focus {
  color: white;
  opacity: 1;
}

